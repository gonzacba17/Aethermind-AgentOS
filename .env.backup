# Aethermind AgentOS - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================
POSTGRES_USER=aethermind
POSTGRES_PASSWORD=aethermind_password
POSTGRES_DB=aethermind
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# DATABASE_URL - HARDCODED (variables ${} no funcionan en .env de Node.js)
DATABASE_URL=postgresql://aethermind:aethermind_password@localhost:5432/aethermind?schema=public

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# LLM Provider API Keys
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
API_PORT=3001
PORT=3001
LOG_LEVEL=debug

# =============================================================================
# Security Configuration
# =============================================================================
# Generate API_KEY_HASH using: pnpm run generate-api-key
API_KEY_HASH=generate_with_script

# JWT Secret for token signing (if using JWT auth)
JWT_SECRET=your-jwt-secret-change-in-production

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Turborepo (optional)
# =============================================================================
TURBO_TEAM=aethermind
TURBO_TOKEN=
