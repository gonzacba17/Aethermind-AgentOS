# Prisma Runner Dockerfile
# This container runs Prisma commands within the Docker network
FROM node:24-alpine

WORKDIR /app

# Install dependencies
COPY package.json pnpm-lock.yaml ./
RUN npm install -g pnpm && pnpm install --frozen-lockfile

# Copy Prisma schema
COPY prisma ./prisma

# Copy .env file
COPY .env .env

# Default command
CMD ["sh"]
