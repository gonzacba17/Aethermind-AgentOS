# Dockerfile optimizado para despliegue del API en Railway
# Basado en el Dockerfile multi-stage existente, enfocado solo en la API

FROM node:20-alpine AS base
RUN npm install -g pnpm@9

# Instalar dependencias
FROM base AS deps
WORKDIR /app
COPY pnpm-lock.yaml ./
RUN pnpm fetch
COPY package.json pnpm-workspace.yaml ./
COPY packages/core/package.json ./packages/core/
COPY packages/sdk/package.json ./packages/sdk/
COPY apps/api/package.json ./apps/api/

# ðŸ”¥ FIX CRÃTICO: Copiar Prisma schema ANTES de pnpm install
COPY prisma ./prisma/

RUN pnpm install --frozen-lockfile

# Build de la aplicaciÃ³n
FROM base AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/packages/core/node_modules ./packages/core/node_modules
COPY --from=deps /app/packages/sdk/node_modules ./packages/sdk/node_modules
COPY --from=deps /app/apps/api/node_modules ./apps/api/node_modules
COPY . .

# Instalar tipos faltantes antes del build
RUN pnpm add -D @types/jsonwebtoken --filter=@aethermind/api

# Sync database schema with Drizzle (not Prisma)
RUN cd apps/api && pnpm drizzle-kit push || true

# Build del API con todas sus dependencias workspace
RUN pnpm turbo run build --filter=@aethermind/api...

# Copy startup script
COPY apps/api/startup.js ./apps/api/startup.js

# Imagen final de producciÃ³n
FROM base AS production
WORKDIR /app

# Instalar dumb-init para manejo correcto de seÃ±ales
RUN apk add --no-cache dumb-init

# Crear usuario no-root para seguridad
RUN addgroup -g 1001 -S nodejs && adduser -S nodejs -u 1001

# Copiar archivos compilados y dependencias
COPY --from=builder --chown=nodejs:nodejs /app/packages/core/dist ./packages/core/dist
COPY --from=builder --chown=nodejs:nodejs /app/packages/core/package.json ./packages/core/
COPY --from=builder --chown=nodejs:nodejs /app/packages/sdk/dist ./packages/sdk/dist
COPY --from=builder --chown=nodejs:nodejs /app/packages/sdk/package.json ./packages/sdk/
COPY --from=builder --chown=nodejs:nodejs /app/apps/api/dist ./apps/api/dist
COPY --from=builder --chown=nodejs:nodejs /app/apps/api/package.json ./apps/api/
COPY --from=builder --chown=nodejs:nodejs /app/apps/api/startup.js ./apps/api/startup.js
COPY --from=builder --chown=nodejs:nodejs /app/apps/api/drizzle.config.ts ./apps/api/drizzle.config.ts
COPY --from=builder --chown=nodejs:nodejs /app/apps/api/src/db ./apps/api/src/db
COPY --from=builder --chown=nodejs:nodejs /app/node_modules ./node_modules
COPY --from=builder --chown=nodejs:nodejs /app/packages/core/node_modules ./packages/core/node_modules
COPY --from=builder --chown=nodejs:nodejs /app/packages/sdk/node_modules ./packages/sdk/node_modules
COPY --from=builder --chown=nodejs:nodejs /app/apps/api/node_modules ./apps/api/node_modules

# Crear directorio de logs con permisos correctos ANTES de cambiar a nodejs user
RUN mkdir -p /app/logs && chown -R nodejs:nodejs /app/logs

# Cambiar a usuario no-root
USER nodejs

# Mantener directorio de trabajo en la raÃ­z del proyecto
WORKDIR /app/apps/api

# Exponer puerto (Railway usa PORT env variable)
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:' + (process.env.PORT || 3001) + '/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })"

# Start using startup.js which syncs schema and starts app
CMD ["node", "startup.js"]