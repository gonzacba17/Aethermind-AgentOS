{
  "name": "aethermind-agentos",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "cd apps/api && pnpm dev",
    "dev:dashboard": "cd packages/dashboard && pnpm dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:all": "pnpm test && pnpm test:integration && pnpm test:e2e",
    "test:integration": "turbo run test:integration",
    "test:e2e": "tsx scripts/test/e2e-pipeline.ts",
    "demo": "tsx examples/demo.ts",
    "validate": "tsx examples/validate-system.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "turbo run clean && rimraf node_modules",
    "update:deps": "pnpm update --latest",
    "security:scan": "snyk test",
    "security:monitor": "snyk monitor",
    "security:fix": "snyk fix"
  },
  "dependencies": {

    "@sentry/nextjs": "10",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.41.7",
    "dotenv": "^16.4.0",
    "ioredis": "^5.8.2",
    "jspdf-autotable": "^5.0.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "chalk": "^5.3.0",
    "cross-env": "^7.0.3",
    "execa": "^8.0.1",
    "husky": "^9.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^15.2.0",
    "nock": "^13.5.0",
    "ora": "^8.0.1",

    "rimraf": "^5.0.10",
    "snyk": "^1.1301.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "turbo": "^2.6.1",
    "typescript": "^5.4.0",
    "ws": "^8.16.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}