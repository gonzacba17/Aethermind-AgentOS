{
  "name": "aethermind-agentos",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "cd apps/api && pnpm dev",
    "dev:dashboard": "cd packages/dashboard && pnpm dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.integration.config.js",
    "test:e2e": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.e2e.config.js",
    "test:api": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/api",
    "test:all": "pnpm test && pnpm test:integration && pnpm test:e2e",
    "test:smoke": "node scripts/smoke-test.js",
    "test:watch": "turbo run test -- --watch",
    "test:coverage": "turbo run test -- --coverage",
    "validate": "node scripts/validate-mvp.js",
    "validate:deps": "pnpm install --frozen-lockfile",
    "demo": "tsx examples/basic-agent/full-demo.ts",
    "generate-api-key": "tsx scripts/generate-api-key.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:seed": "node scripts/seed-db.js",
    "db:reset": "pnpm docker:down && pnpm docker:up && sleep 30 && pnpm db:migrate && pnpm db:seed",
    "db:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "clean": "turbo run clean && rimraf node_modules",
    "update:deps": "pnpm update --latest"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.41.7",
    "ioredis": "^5.8.2",
    "jspdf-autotable": "^5.0.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "cross-env": "^7.0.3",
    "husky": "^9.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^15.2.0",
    "nock": "^13.5.0",
    "prisma": "^6.19.0",
    "rimraf": "^5.0.10",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "turbo": "^2.6.1",
    "typescript": "^5.4.0",
    "ws": "^8.16.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}